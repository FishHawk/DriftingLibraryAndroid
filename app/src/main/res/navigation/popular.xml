<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popular"
    app:startDestination="@+id/nav_popular">

    <fragment
        android:id="@+id/nav_popular"
        android:name="com.fishhawk.driftinglibraryandroid.ui.provider.popular.PopularFragment"
        android:label="@string/label_popular"
        tools:layout="@layout/provider_popular_fragment">

    <action
        android:id="@+id/action_popular_to_search"
        app:destination="@id/nav_search" />
    </fragment>

    <fragment
        android:id="@+id/nav_search"
        android:name="com.fishhawk.driftinglibraryandroid.ui.provider.search.SearchFragment"
        android:label="@string/label_search"
        tools:layout="@layout/provider_search_fragment" />
</navigation>