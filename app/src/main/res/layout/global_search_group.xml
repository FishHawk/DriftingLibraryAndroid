<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="searchGroup"
            type="com.fishhawk.driftinglibraryandroid.ui.main.globalsearch.SearchGroup" />
    </data>

    <androidx.cardview.widget.CardView
        style="@style/Theme.Widget.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/provider"
                style="@style/Theme.TextAppearance.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@{searchGroup.provider.lang + ` - ` + searchGroup.provider.name}"
                tools:text="Provider" />

            <com.classic.common.MultipleStatusView
                android:id="@+id/multiple_status_view"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:errorView="@layout/status_error"
                app:loadingView="@layout/status_loading">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/global_search_thumbnail" />
            </com.classic.common.MultipleStatusView>

            <!--            <FrameLayout-->
