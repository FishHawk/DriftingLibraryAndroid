<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Theme.Widget.CardView"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginStart="@dimen/baseline_8dp"
    android:layout_marginTop="@dimen/baseline_8dp"
    android:layout_marginEnd="@dimen/baseline_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/baseline_8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/task_id"
            style="@style/Theme.TextAppearance.LinearThumbnailTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/source_manga_id"
            style="@style/Theme.TextAppearance.Subtitle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/target_manga_id"
            style="@style/Theme.TextAppearance.Subtitle2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
