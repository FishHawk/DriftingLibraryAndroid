<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Theme.Widget.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/baseline_8dp"
    android:layout_marginEnd="@dimen/baseline_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/baseline_8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/baseline_8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/task_id"
                style="@style/Theme.TextAppearance.LinearThumbnailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/target_manga_id"
                style="@style/Theme.TextAppearance.LinearThumbnailTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/start_button"
                style="@style/Theme.Widget.Button.Icon.Textless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_baseline_play_arrow_24" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pause_button"
                style="@style/Theme.Widget.Button.Icon.Textless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_baseline_play_arrow_24" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete_button"
                style="@style/Theme.Widget.Button.Icon.Textless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_baseline_play_arrow_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/baseline_8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/source_label"
                style="@style/Theme.TextAppearance.Subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="From:" />

            <TextView
                android:id="@+id/source"
                style="@style/Theme.TextAppearance.Subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/source_manga_id"
                style="@style/Theme.TextAppearance.Subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
