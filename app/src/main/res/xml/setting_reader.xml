<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        app:defaultValue="RTL"
        app:entries="@array/reading_direction_entries"
        app:entryValues="@array/reading_direction_entry_values"
        app:iconSpaceReserved="false"
        app:key="reading_direction"
        app:summary="%s"
        app:title="@string/settings_reading_direction" />

    <ListPreference
        app:defaultValue="DEFAULT"
        app:entries="@array/screen_orientation_entries"
        app:entryValues="@array/screen_orientation_entry_values"
        app:iconSpaceReserved="false"
        app:key="screen_orientation"
        app:summary="%s"
        app:title="@string/settings_screen_orientation" />

    <SwitchPreference
        app:defaultValue="false"
        app:iconSpaceReserved="false"
        app:key="page_interval_enabled"
        app:title="Page interval" />

    <SwitchPreference
        app:defaultValue="false"
        app:iconSpaceReserved="false"
        app:key="keep_screen_on"
        app:title="Keep screen on" />

    <SwitchPreference
        app:defaultValue="false"
        app:iconSpaceReserved="false"
        app:key="volume_key_enabled"
        app:title="Use volume key to turn pages" />

    <SwitchPreference
        app:defaultValue="true"
        app:iconSpaceReserved="false"
        app:key="long_tap_dialog_enabled"
        app:title="Long tap dialog" />
</PreferenceScreen>